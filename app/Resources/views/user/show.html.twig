<div class="form-group">
    <a class="btn btn-secondary" href="{{ path('user') }}">
        <span class="fa fa-list" aria-hidden="true"></span>
        Volver al listado
    </a>
    <a class="btn btn-primary" href="{{ path('user_edit', { 'id':  user.id }) }}">
        <span class="fa fa-pencil" aria-hidden="true"></span>
        Editar
    </a>
    <a class="btn btn-info" href="{{ path('user_new') }}">
        <span class="fa fa-plus" aria-hidden="true"></span>
        Nuevo
    </a>
    <form action="{{ path('user_delete', { 'id': user.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('¿Está seguro?');">
