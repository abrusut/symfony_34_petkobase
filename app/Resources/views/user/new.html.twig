{% extends 'base.html.twig' %}

{% block title %}
{{ parent() }} - Alta de usuario
{% endblock %}

{% block body %}

<div class="row mt-5">
    <div class="col-md-12">
    {% for type, flashMessages in app.session.flashbag.all() %} 
    {% for flashMessage in flashMessages %}
    <div class="alert alert-{{ type }}">
        {{ flashMessage|raw }}
    </div>
     {% endfor %} 
     {% endfor %} 
</div>

    
    <div class="col-lg-12">
        <h4>Alta de usuario <span class="fa fa-file" aria-hidden="true"></span> </h4>
    </div>
</div>

<div class="">

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <p>
        <button type="submit" name="submit" value="save" class="btn btn-primary">
            Guardar <span class="fa fa-check-circle" aria-hidden="true"></span>
        </button>
        <button type="submit" name="submit" value="saveAndAdd" class="btn btn-info">
            Guardar y Cargar Nuevo <span class="fa fa-plus" aria-hidden="true"></span>
        </button>
    </p>


    {{ form_end(form) }}

    <hr/>

<div class="form-group">
    <a class="btn btn-secondary" href="{{ path('user') }}">
        <span class="fa fa-list" aria-hidden="true"></span>
        Volver al listado
    </a>
</div>

</div>


{% endblock %}

