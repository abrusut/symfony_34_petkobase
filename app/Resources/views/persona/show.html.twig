{% extends 'base.html.twig' %}

{% block title %}
{{ parent() }} - persona
{% endblock %}

{% block body %}

<div class="row mt-5">
    <div class="col-md-12">
    {% for type, flashMessages in app.session.flashbag.all() %} 
    {% for flashMessage in flashMessages %}
    <div class="alert alert-{{ type }}">
        {{ flashMessage|raw }}
    </div>
     {% endfor %} 
     {% endfor %} 
</div>

    
    <div class="col-lg-12">
        <h4>Visualizaci&oacute;n de persona <span class="fa fa-eye" aria-hidden="true"></span>  </h4>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ persona.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Nombre</strong></p>
        <p>
            {{ persona.nombre }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Apellido</strong></p>
        <p>
            {{ persona.apellido }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Fechanacimiento</strong></p>
        <p>
            {% if persona.fechaNacimiento %}{{ persona.fechaNacimiento|date('Y-m-d') }}{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Domiciliocalle</strong></p>
        <p>
            {{ persona.domicilioCalle }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Domicilionumero</strong></p>
        <p>
            {{ persona.domicilioNumero }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Numerodocumento</strong></p>
        <p>
            {{ persona.numeroDocumento }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Sexo</strong></p>
        <p>
            {{ persona.sexo }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Telefono</strong></p>
        <p>
            {{ persona.telefono }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Email</strong></p>
        <p>
            {{ persona.email }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Createdat</strong></p>
        <p>
            {% if persona.createdAt %}{{ persona.createdAt|date('Y-m-d H:i:s') }}{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Updatedat</strong></p>
        <p>
            {% if persona.updatedAt %}{{ persona.updatedAt|date('Y-m-d H:i:s') }}{% endif %}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Fechabaja</strong></p>
        <p>
            {% if persona.fechaBaja %}{{ persona.fechaBaja|date('Y-m-d H:i:s') }}{% endif %}
        </p>

    </div>
</div>

<hr/>


<div class="form-group">
    <a class="btn btn-secondary" href="{{ path('persona') }}">
        <span class="fa fa-list" aria-hidden="true"></span>
        Volver al listado
    </a>
    <a class="btn btn-primary" href="{{ path('persona_edit', { 'id':  persona.id }) }}">
        <span class="fa fa-pencil" aria-hidden="true"></span>
        Editar
    </a>
    <a class="btn btn-info" href="{{ path('persona_new') }}">
        <span class="fa fa-plus" aria-hidden="true"></span>
        Nuevo
    </a>
    <form action="{{ path('persona_delete', { 'id': persona.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('¿Está seguro?');">
            <span class="fa fa-times" aria-hidden="true"></span>
            Eliminar
        </button>
    </form>
</div>


{% endblock %}

