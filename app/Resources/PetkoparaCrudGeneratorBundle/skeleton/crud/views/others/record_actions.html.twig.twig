
<div class="form-group">
    <a class="btn btn-secondary" href="{{ "{{ path('"~ route_name_prefix ~"') }}" }}">
        <span class="fa fa-list" aria-hidden="true"></span>
        Volver al listado
    </a>
{% if ('edit' in actions) and (not hide_edit) %}
    <a class="btn btn-primary" href="{{ "{{ path('"~ route_name_prefix ~"_edit', { 'id':  " ~ entity_singularized ~ "."~ identifier ~" }) }}" }}">
        <span class="fa fa-pencil" aria-hidden="true"></span>
        Editar
    </a>
{% endif %}
{% if ('new' in actions) and (not hide_new) %}
    <a class="btn btn-info" href="{{ "{{ path('"~ route_name_prefix ~"_new') }}" }}">
        <span class="fa fa-plus" aria-hidden="true"></span>
        Nuevo
    </a>
{% endif %}
{% if ('delete' in actions) and (not hide_delete) %}
    <form action="{{ "{{ path('"~ route_name_prefix ~"_delete', { 'id': " ~ entity_singularized ~ "."~ identifier ~" }) }}" }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ '{{ form_widget(delete_form) }}' }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('¿Está seguro?');">
            <span class="fa fa-times" aria-hidden="true"></span>
            Eliminar
        </button>
    </form>
{% endif %}
</div>

