
{% if 'delete' in actions %}
                            <a  onclick="return confirm('¿Está seguro?');" title="Eliminar" class="btn btn-danger btn-sm" href="{{ "{{ path('"~ route_name_prefix ~"_by_id_delete', { 'id': " ~ entity_singularized ~ "."~ identifier ~"}) }}" }}">
                                <span class="fa fa-times" aria-hidden="true"></span>
                            </a>
{% endif %}
{% if 'show' in actions %}
