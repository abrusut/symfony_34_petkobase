                                <span class="fa fa-eye" aria-hidden="true"></span>
                            </a>
{% endif %}
{% if 'edit' in actions %}
                            <a  title='Editar' class="btn btn-primary btn-sm" href="{{ "{{ path('"~ route_name_prefix ~"_edit', { 'id': " ~ entity_singularized ~ "."~ identifier ~" }) }}" }}">
                                <span class="fa fa-pencil" aria-hidden="true"></span>
                            </a>
{% endif %}
