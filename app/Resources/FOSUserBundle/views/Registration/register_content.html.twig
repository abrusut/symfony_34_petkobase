{% trans_default_domain 'FOSUserBundle' %}

<div class="row mt-5">
    <div class="col-lg-12">
        <h4>Registraci&oacute;n de nuevo usuario</h4>
    </div>
</div>

<div class="row mt-5">
    <div class="col-lg-12">
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
        {{ form_widget(form) }}

        <div class="form-group col-md-3">
            <label for="captcha" id="lcaptcha"></label>
            <input type="text" class="text form-control" name="captcha"  placeholder="Ingrese el resultado *" size="4" id="captcha" />
            <span class="error" id="capnull-error" style="width:150px; display: none; color:red">Ingrese resultado</span>
            <span class="error" id="captcha-error" style="width:150px; display: none; color:red">Resultado erroneo</span>
        </div>
{#        <p>#}
{#            <div>#}
{#                <input type="submit" id="submit" class="btn btn-primary" value="{{ 'registration.submit'|trans }}" />#}
{#            </div>#}
{#        </p>#}
        <p>
            <button type="submit" id="btnEnviar" name="submit" value="captcha-error" class="btn btn-primary">
                Registrarse <span class="btn btn-primary fa fa-save" aria-hidden="true"></span>
            </button>
        </p>
        {{ form_end(form) }}
    </div>
</div>